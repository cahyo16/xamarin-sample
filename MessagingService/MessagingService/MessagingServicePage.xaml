<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MessagingService"
    x:Class="MessagingService.MessagingServicePage">
    <Grid BackgroundColor="Silver" RowSpacing="25" ColumnSpacing="25" Padding="25">
        <Entry x:Name="txtInput" Grid.Row="0" Grid.ColumnSpan="2" Placeholder="Place you recipient"/>
        <Button Text="Send SMS" Grid.Row="1" Grid.Column="0" Clicked="SmsClicked"/>
        <Button Text="Call" Grid.Row="1" Grid.Column="1" Clicked="CallClicked"/>
        <Button Text="Send Mail" Grid.Row="2" Grid.Column="0" Clicked="MailClicked"/>
        <Button Text="Share" Grid.Row="2" Grid.Column="1" Clicked="ShareClicked"/>
    </Grid>
</ContentPage>
